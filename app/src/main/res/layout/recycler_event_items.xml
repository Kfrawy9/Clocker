<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:elevation="6dp"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/background"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Simple Title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="22sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:textColor="@color/text"
            android:layout_margin="6dp"
            android:id="@+id/eventTitle"
            android:ellipsize="end"
            app:layout_constraintRight_toRightOf="@id/eventBody"
            />

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="This is a simple desc of an event of my new app blablalbabla..."
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/eventTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="6dp"
            android:maxLines="3"
            android:textColor="@color/text"
            android:textSize="15sp"
            android:id="@+id/eventBody"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 feb 2017"
            android:id="@+id/dateTime"
            app:layout_constraintTop_toBottomOf="@id/eventBody"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_cal"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_no_ring"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="8dp"
            android:id="@+id/ringImg"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>







</com.google.android.material.card.MaterialCardView>